{
  "name": "angular2-draggable-github",
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port=4203",
    "build": "ng build --prod --base-href ./",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:lib": "ng-packagr",
	"build:css": "node scripts/build-scss.js",
    "link:lib": "rimraf node_modules/@wfm/angular2-draggable && cpr dist/lib node_modules/@wfm/angular2-draggable",
    "update:md": "cpr README.md dist/lib/README.md -o",
    "dist": "run-s build:lib build:css update:md",
    "release": "run-s build:lib build:css update:md link:lib build:doc",
    "demo": "run-s build:lib link:lib build:css start",
    "build:doc": "run-s build compodoc",
    "compodoc": "compodoc -p lib/src/tsconfig.lib.json -d dist/docs/api-doc --theme stripe",
    "serve:doc": "compodoc -p lib/src/tsconfig.lib.json -s"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.2.10",
    "@angular/common": "5.2.10",
    "@angular/compiler": "5.2.10",
    "@angular/core": "5.2.10",
    "@angular/forms": "5.2.10",
    "@angular/http": "5.2.10",
    "@angular/platform-browser": "5.2.10",
    "@angular/platform-browser-dynamic": "5.2.10",
    "@angular/router": "5.2.10",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.2",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.6.8",
    "@angular/compiler-cli": "5.2.10",
    "@angular/language-service": "5.2.10",
    "@compodoc/compodoc": "^1.0.4",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "@types/prismjs": "^1.6.5",
    "bootstrap": "4.0.0-beta.2",
    "codelyzer": "^4.0.1",
    "cpr": "^3.0.1",
    "font-awesome": "^4.7.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^1.6.0",
    "ngx-bootstrap": "^2.0.0-beta.8",
    "ngx-markdown": "^1.4.0",
    "npm-run-all": "^4.1.2",
    "protractor": "~5.1.2",
    "rimraf": "^2.6.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.8.3"
  }
}
